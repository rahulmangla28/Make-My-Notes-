<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ForgotPasswordActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="-54dp" />

    <TextView
        android:id="@+id/fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dwwah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="!! Don't worry We are here !!"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputRegisteredEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Registered Email"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:background="@drawable/input_bg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnrecover"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/input_bg"
        android:text="Click here to recover"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/inputRegisteredEmail"
        app:layout_constraintStart_toStartOf="@id/inputRegisteredEmail"
        app:layout_constraintTop_toBottomOf="@+id/inputRegisteredEmail"
        app:strokeColor="@color/white" />

    <TextView
        android:id="@+id/gobacktoLogin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/input_bg"
        android:text="Go back to Login page"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/inputRegisteredEmail"
        app:layout_constraintStart_toStartOf="@id/inputRegisteredEmail"
        app:layout_constraintTop_toBottomOf="@+id/inputRegisteredEmail"
        app:strokeColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>